<table class="awesome_tables" id="admin_resources">
  <caption>Resources</caption>
  <tr>
    <th>Name</th>
    <th>Resource Group</th>
    <th>Permission Types</th>
  </tr>
  <% items.each do |resource| %>
    <tr class="<%= 'deactivated' if resource.does_not_have_any_owners? || resource.deactivated? %>">
      <td><%= link_to resource.name, edit_admin_resource_path(resource) %></td>
      <td><%= resource.resource_group.name %></td>
      <td><%= (resource.permission_types.map {|pt| pt.name }).join(', ') %></td>
    </tr>
  <% end %>
  <%= table_info_row items, :colspan => 3, :item_type => item_type %>
</table>