<fieldset class="chunker_container">
  <legend><%= @user.try(:job).try(:name) %> Permissions</legend>
  <ul class="top_level_chunk">
    <% @resource_groups.each do |resource_group| %>
      <li class="resource_groups collapsable">
        <h5 class="pivot"><%= resource_group.name %></h5>
        <ul>
          <% resource_group.resources.each do |resource| %>
            <li>
              <h6><%= resource.name %></h6>
              <ul>
                <% resource.permissions.chunker.each do |row| %>
                  <li>
                    <% row.each do |permission| %>
                      <% next if permission.nil? %>
                      <div class="piece_of_chunk">
                        <%= check_box_tag "user[permission_ids][]", permission.id, @permissions.include?(permission), :id => "user_permission_ids_#{permission.id}", :disabled => true %>
                        <%= f.label "permission_ids_#{permission.id}", permission.permission_type.name %>
                      </div>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </li>
          <% end %>
        </ul>
      </li>
    <% end %>
  </ul.
</fieldset>
