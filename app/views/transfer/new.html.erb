<h3>Transfer Employee</h3>
<%= form_for(@user, :url => transfer_create_path(:id => @user.id)) do |f| %>
<div class="field">
<%= f.label :full_name %>
<%= @user.full_name %>
</div>
<div class="field">
  <%= f.label :job_id %>
  <%= f.select :job_id, option_groups_from_collection_for_select(Department.alphabetical.includes(:jobs).all, :jobs, :name, :id, :name, @user.try(:job).try(:id)) %>
</div>
<div class="field">
  <%= f.label :manager_id %>
  <%= f.select :manager_id, @managers.map{|m| [ m.login, m.id ]}, :include_blank => true %>
</div>
<div class="field">
  <%= f.label :employment_type_id %>
  <%= f.select :employment_type_id, @employment_types.map {|e| [e.name, e.id]} %>
</div>
 <div class="actions">
    <%= f.submit "Complete Transfer", :class => 'awesome_button', :alert => "Are you sure you want to do this? New access requests will be generated by this action." %>
</div>
<% end %>

